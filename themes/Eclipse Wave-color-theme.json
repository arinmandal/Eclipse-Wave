		// === Git Diff ===
		"diffEditor.insertedTextBackground": "#00E5FF55", // Cyan glow
		"diffEditor.removedTextBackground": "#E9456055", // Red-pink glow

		// === Terminal ===
		"terminal.background": "#0B0F1A",
		"terminal.foreground": "#E6E6F0",
