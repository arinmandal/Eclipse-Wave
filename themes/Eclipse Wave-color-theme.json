		"peekViewResult.background": "#14182E",
		"peekViewResult.matchHighlightBackground": "#4361EE55",
		"peekViewTitle.background": "#1A1F3B",

		// === Git Decorations ===
		"editorGutter.addedBackground": "#50FA7B55",
		"editorGutter.modifiedBackground": "#61AFEFAA",
